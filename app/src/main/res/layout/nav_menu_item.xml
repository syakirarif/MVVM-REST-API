<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_menu_height"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/nav_menu_item_icon"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/nav_menu_icon_height"
        android:layout_height="@dimen/nav_menu_icon_height"
        android:layout_marginLeft="@dimen/nav_menu_margin_left" />

    <TextView
        android:id="@+id/nav_menu_item_title"
        android:layout_toRightOf="@+id/nav_menu_item_icon"
        android:layout_toLeftOf="@+id/nav_menu_item_arrow"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/nav_menu_item_icon"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/nav_menu_margin_left"
        android:text="menu"
        android:textSize="@dimen/nav_menu_title_textsize"/>

    <ImageView
        android:id="@+id/nav_menu_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_down" />
</RelativeLayout>